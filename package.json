{
    "name": "quiet-quadrant-v2",
    "version": "0.9.3",
    "private": true,
    "type": "module",
    "main": "electron/main.cjs",
    "scripts": {
        "dev": "vite --host",
        "build": "vite build",
        "build:pages": "tsc -b && BUILD_TARGET=pages vite build",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src --fix",
        "electron:dev": "electron .",
        "electron:build": "npm run build && electron-builder",
        "electron:build:win": "npm run build && electron-builder --windows",
        "electron:build:mac": "npm run build && electron-builder --macos",
        "electron:build:linux": "npm run build && electron-builder --linux",
        "mobile:sync": "npm run build && cap sync",
        "mobile:open:ios": "cap open ios",
        "mobile:open:android": "cap open android",
        "mobile:assets": "capacitor-assets generate --android --ios",
        "mobile:build:android": "npm run mobile:sync && cd android && ./gradlew assembleDebug",
        "mobile:build:ios": "npm run mobile:sync && cd ios/App && xcodebuild -project App.xcodeproj -scheme App -configuration Release -sdk iphoneos -archivePath build/App.xcarchive archive CODE_SIGN_IDENTITY='' CODE_SIGNING_REQUIRED=NO CODE_SIGNING_ALLOWED=NO && mkdir -p build/Payload && cp -r build/App.xcarchive/Products/Applications/App.app build/Payload/ && cd build && zip -r QuietQuadrant-unsigned.ipa Payload"
    },
    "dependencies": {
        "phaser": "^3.80.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "trystero": "^0.22.0",
        "zustand": "^5.0.0"
    },
    "devDependencies": {
        "@capacitor/android": "^8.0.0",
        "@capacitor/assets": "^3.0.5",
        "@capacitor/cli": "^8.0.0",
        "@capacitor/core": "^8.0.0",
        "@capacitor/ios": "^8.0.0",
        "@redux-devtools/extension": "^3.3.0",
        "@vitejs/plugin-react": "^4.2.0",
        "electron": "^39.2.7",
        "electron-builder": "^26.0.12",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "vite": "^5.2.0",
        "vitest": "^1.4.0"
    },
    "build": {
        "appId": "com.quietquadrant.v2",
        "productName": "Quiet Quadrant V2",
        "icon": "public/logo.png",
        "forceCodeSigning": false,
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "output": "release"
        },
        "mac": {
            "category": "public.app-category.games",
            "identity": null
        },
        "win": {
            "target": "portable"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
